<?xml version="1.0" encoding="UTF-8"?>
<JDialog rootClass="MainFrame"
	name="com.oxande.wavecleaner.ui.AbstractRecordScreen" coolsize="400,200"
	title="Recording">

	<table>
		<tr>
			<td><label><![CDATA[<html>You must have the turnable running (the disc turns) and 
			the stylus just above the disc. Then you can start recording.</html>]]></label></td>
		</tr>
		<tr>
		<td>Select your input:</td>
		<td><JComboBox id="inputLine"></JComboBox></td>
		</tr>
		<tr>
		  <td><JButton action="startRecord">START RECORDING</JButton></td>
		  <td><JButton action="endRecord">END RECORDING</JButton></td>
		</tr>
	</table>
</JDialog>
