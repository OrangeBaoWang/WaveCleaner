<?xml version="1.0" encoding="UTF-8"?>
<JFrame rootClass="MainFrame" name="com.oxande.wavecleaner.ui.AbstractMainScreen"
	coolsize="600,400" title="Wave Cleaner" onClosing="onExit">
	<menubar>
		<menu text="_File">
			<menuitem action="onLoadSound">Load the music</menuitem>
			<menuitem action="onRecordSound">Record</menuitem>
			<menuitem shortcut="SPACE" action="onPlayPause">Play/Pause</menuitem>
			<!-- <menu text="_Look &amp; Feel"> <lookandfeel /> </menu> -->
			<menuitem action="onExit">E_xit</menuitem>
		</menu>
		<menu text="_Edit">
			<menuitem name="zoomIn" action="onZoomIn">Zoom In</menuitem>
			<menuitem name="zoomOut" action="onZoomOut">Zoom Out</menuitem>
		</menu>
		<menu text="_Help">
			<menuitem action="showAboutDlg">_About</menuitem>
		</menu>
	</menubar>

	<toolbar id="toolbar">
		<jbutton action="onZoomIn"></jbutton> 
	</toolbar>

	<splitpane>
		<splitpane orientation="vertical">
			<component id="instant" class="WaveComponent"></component>
			<tree id="pathTree" vscroll="auto" hscroll="auto" />
		</splitpane>
		
		<component id="song" class="com.oxande.wavecleaner.ui.WaveFormComponent" />
	</splitpane>

	<statusbar id="statusBar" property="statusMessage" />

</JFrame>
