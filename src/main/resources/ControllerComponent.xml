<?xml version="1.0" encoding="UTF-8"?>
<JPanel rootClass="ControllerComponent"
	name="com.oxande.wavecleaner.ui.AbstractControllerComponent" coolsize="600,400">

	<table>
		<tr>
			<td rowspan="2">
				<JCheckBox id="crackle" text="Decrackling" action="onToggleCrackling"
					focusable="false">Decrackle
				</JCheckBox>
			</td>
			<td fill="horizontal">
				<JSlider minsize="100,50" id="crackle_factor" onChange="crackleFactorChanged"
					minimum="1" maximum="100" orientation="horizontal" value="2">Factor
				</JSlider>
			</td>
			<td fill="horizontal">
				<JSlider minsize="100,50" id="crackle_average" onChange="crackleAverageChanged"
					minimum="0" maximum="100" orientation="horizontal" value="3">Average
				</JSlider>
			</td>
			<td fill="horizontal">
				<JPanel class="com.oxande.swing.JMeter" id="crackle_window" >Window</JPanel>
			</td>
		</tr>
		<tr>
			<td>
				<JLabel property="crackleFactorLabel" align="center"></JLabel>
			</td>
			<td>
				<JLabel property="crackleAverageLabel" align="center"></JLabel>
			</td>
			<td>
				<!--  JLabel property="crackleWindowLabel" align="center"></JLabel -->
			</td>
		</tr>
		<tr>
			<td rowspan="1">
				<JCheckBox id="click" text="Remove clicks" action="onToggleClicks"
					focusable="false">Remove clicks
				</JCheckBox>
			</td>
			<td fill="horizontal">
				<JSlider minsize="100,50" id="thresold_factor" onChange="clickThresoldChanged"
					minimum="0" maximum="900" orientation="horizontal" value="200">Factor
				</JSlider>
			</td>
			<td fill="horizontal">
				<JSlider minsize="100,50" id="declick_window" onChange="clickWindowChanged"
					minimum="0" maximum="40" orientation="horizontal" value="20">Average
				</JSlider>
			</td>
			<td fill="horizontal">
			</td>
		</tr>

		<tr>
			<td>OUTPUT SELECTOR</td>
			<td colspan="2" fill="horizontal" hgap="0">
				<JToggleButton id="finalOutput" action="onFinalOutput"
					group="audioOut">NORMAL</JToggleButton>
				<JToggleButton id="originalOutput" action="onOriginalOutput"
					group="audioOut">ORIGIN</JToggleButton>
				<JToggleButton id="diffOutput" action="onDiffOutput"
					group="audioOut">DIFF</JToggleButton>
				<JToggleButton id="leftRightOutput" action="onLeftRightOutput"
					group="audioOut">L/R</JToggleButton>
			</td>
			<td>
			<JPanel class="com.oxande.swing.JMeter" id="volume" >Volume</JPanel>
			</td>
		</tr>
	</table>
</JPanel>
